run = "node index.js"
entrypoint = "index.js"
hidden = [".config", "package-lock.json"]

[languages.javascript]
pattern = "**/*.{js,jsx,ts,tsx,json}"
syntax = "javascript"

[languages.javascript.languageServer]
start = "typescript-language-server --stdio"

[deployment]
run = ["sh", "-c", "node index.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80
